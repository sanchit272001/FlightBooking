@model flight.Models.SanchitFlight

@{
    ViewData["Title"] = "GetTravel";
    Layout="~/Views/Shared/AdminLayout.cshtml";
}

<h1> Hello @ViewBag.Username</h1>
<h3>Search Flights</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetTravel">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Source" class="control-label"></label>
                <select asp-for="Source" class="form-control" asp-items="@ViewBag.Sources" ></select>
                <span asp-validation-for="Source" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Destination" class="control-label"></label>
                <select asp-for="Destination" class="form-control" asp-items="@ViewBag.Destinations"></select>
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
