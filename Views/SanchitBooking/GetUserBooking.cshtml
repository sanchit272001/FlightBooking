@model flight.Models.SanchitBooking

@{
    ViewData["Title"] = "GetUserBooking";
    Layout="~/Views/Shared/AdminLayout.cshtml";
}

<h1> Hello @ViewBag.Username</h1>
<br>

<h2>Please enter total number of Passengers</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetUserBooking">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="NoPassengers" class="control-label"></label>
                <input asp-for="NoPassengers" class="form-control" />
                <span asp-validation-for="NoPassengers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
